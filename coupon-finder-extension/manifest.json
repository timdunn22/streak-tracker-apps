{
  "manifest_version": 3,
  "name": "SaveSmart â€” Coupon Finder",
  "version": "1.0.0",
  "description": "Automatically finds and applies coupon codes at checkout. Privacy-first. No data sold.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["coupon-database.js", "content.js"],
      "css": ["styles/notification-bar.css"],
      "run_at": "document_idle"
    }
  ]
}
